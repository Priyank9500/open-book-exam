<!-- Define a function to render each order -->
<% function renderorder(order) { %>
  <div class="item-preview">
    <a href="/single-order/<%= order._id %>">
      <h2>Title: <%= order.title %></h2>
      <p>Description: <%= order.description %></p>
      <!-- If createdBy field is available, you can display the creator -->
      <% if (order.createdBy) { %>
        <p>Created by: <%= order.createdBy.username %></p>
      <% } %>
    </a>
  </div>
  <% } %>
  
  <!DOCTYPE html>
  <html lang="en">
     <!-- Pass a JavaScript variable to a partial in EJS -->
     <%- include('partials/head.ejs', { title: "Home page" }) %>

    <body>
      <%- include('partials/navbar.ejs') %>
      <%- include('partials/hero.ejs') %>
      <div class="content">
        <div class="home">
          <div class="item-list">
            <% if (orders.length > 0) { %>
            <!-- Call the renderorder function for each order -->
            <% orders.forEach(renderorder); %> 
            <% } else { %>
            <p>No orders found.</p>
            <% } %>
          </div>
        </div>
      </div>  
      <%- include('partials/ads.ejs') %>
      <%- include('partials/footer.ejs') %>
    </body>
  </html>